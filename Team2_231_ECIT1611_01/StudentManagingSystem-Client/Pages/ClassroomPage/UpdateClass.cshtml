@page
@using BusinessObject.Utility;
@model StudentManagingSystem_Client.Pages.ClassroomPage.UpdateClassModel
@{
}
<div class="mobile-menu-overlay"></div>

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        @*<div class="title">
                        <h4>Form</h4>
                        </div>*@
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="ClassRoom">Class List</a></li>
                                @if (User.IsInRole(RoleConstant.ADMIN))
                                {
                                    <li class="breadcrumb-item active" aria-current="page">Edit Class</li>
                                }
                                else
                                {
                                    <li class="breadcrumb-item active" aria-current="page">Detail</li>
                                }
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- Default Basic Forms Start -->
            @if (User.IsInRole(RoleConstant.ADMIN))
            {
                <div class="pd-20 card-box mb-30">
                    <form method="post">
                        <div class="form-group row">
                            <div class="col-sm-12 col-md-10">
                                <input asp-for="ClassRoom.Id" class="form-control" type="hidden">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ClassRoom.ClassName" class="col-sm-12 col-md-2 col-form-label">ClassRoom Name</label>
                            <div class="col-sm-12 col-md-10">
                                <input asp-for="ClassRoom.ClassName" class="form-control" type="text" placeholder="Name">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ClassRoom.ClassCode" class="col-sm-12 col-md-2 col-form-label">ClassRoom Code</label>
                            <div class="col-sm-12 col-md-10">
                                <input asp-for="ClassRoom.ClassCode" class="form-control" type="text" placeholder="Code">
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Department</label>
                            <select asp-for="ClassRoom.DepartmentId" class="custom-select2 form-control" style="width: 100%; height: 38px;">
                                @foreach (var item in Model.listDept)
                                {
                                    <option value="@item.Id">@item.DepartmentName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Teacher</label>
                            <select asp-for="ClassRoom.UserId" class="custom-select2 form-control" style="width: 100%; height: 38px;">
                                @foreach (var item in Model.listUser)
                                {
                                    <option value="@item.Id">@item.FullName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ClassRoom.Status" class="col-sm-12 col-md-2 col-form-label">Status</label>
                            <div class="col-sm-12 col-md-10">
                                <select asp-for="ClassRoom.Status" class="custom-select col-12">
                                    <option selected="">Choose...</option>
                                    <option value="true">Hoạt động</option>
                                    <option value="false">Không hoạt động</option>
                                </select>
                            </div>
                        </div>
                        <div class="btn-list">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-page="ClassRoom" type="submit" class="btn btn-danger">Cancel</a>
                        </div>
                    </form>
                </div>
            }
            else
            {
                <div class="pd-20 card-box mb-30">
                    <form method="post">
                        <div class="form-group row">
                            <div class="col-sm-12 col-md-10">
                                <input asp-for="ClassRoom.Id" class="form-control" type="hidden">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ClassRoom.ClassName" class="col-sm-12 col-md-2 col-form-label">ClassRoom Name</label>
                            <div class="col-sm-12 col-md-10">
                                <input asp-for="ClassRoom.ClassName" class="form-control" type="text" placeholder="Name" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ClassRoom.ClassCode" class="col-sm-12 col-md-2 col-form-label">ClassRoom Code</label>
                            <div class="col-sm-12 col-md-10">
                                <input asp-for="ClassRoom.ClassCode" class="form-control" type="text" placeholder="Code" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Department</label>
                            <select asp-for="ClassRoom.DepartmentId" class="custom-select2 form-control" style="width: 100%; height: 38px;" disabled="disabled">
                                @foreach (var item in Model.listDept)
                                {
                                    <option value="@item.Id">@item.DepartmentName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Teacher</label>
                            <select asp-for="ClassRoom.UserId" class="custom-select2 form-control" style="width: 100%; height: 38px;" disabled="disabled">
                                @foreach (var item in Model.listUser)
                                {
                                    <option value="@item.Id">@item.FullName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ClassRoom.Status" class="col-sm-12 col-md-2 col-form-label">Status</label>
                            <div class="col-sm-12 col-md-10">
                                <select asp-for="ClassRoom.Status" class="custom-select col-12" disabled="disabled">
                                    <option selected="">Choose...</option>
                                    <option value="true">Hoạt động</option>
                                    <option value="false">Không hoạt động</option>
                                </select>
                            </div>
                        </div>
                        <div class="btn-list">
                            <a asp-page="ClassRoom" type="submit" class="btn btn-primary">Back</a>
                        </div>
                    </form>
                </div>
            }
            <!-- Default Basic Forms End -->

        </div>
    </div>
</div>