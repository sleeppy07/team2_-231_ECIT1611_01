@page
@using BusinessObject.Utility;
@model StudentManagingSystem_Client.Pages.DepartmentPage.UpdateDepartmentModel
@{
}
<div class="mobile-menu-overlay"></div>

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="Department">Department List</a></li>
                                @if (User.IsInRole(RoleConstant.ADMIN))
                                {
                                    <li class="breadcrumb-item active" aria-current="page">Edit Department</li>
                                }
                                else
                                {
                                    <li class="breadcrumb-item active" aria-current="page">Detail</li>
                                }
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- Default Basic Forms Start -->
            @if (User.IsInRole(RoleConstant.ADMIN))
            {
                <div class="pd-20 card-box mb-30">
                    <form method="post">
                        <div class="form-group row">
                            <input asp-for="Department.Id" class="form-control" type="hidden">
                        </div>
                        <div class="form-group row">
                            <label asp-for="Department.DepartmentName" class="col-sm-12 col-md-2 col-form-label">Department Name</label>
                            <div class="col-sm-12 col-md-10">
                                <input asp-for="Department.DepartmentName" class="form-control" type="text" placeholder="Department name">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Department.DepartmentCode" class="col-sm-12 col-md-2 col-form-label">Department Code</label>
                            <div class="col-sm-12 col-md-10">
                                <input asp-for="Department.DepartmentCode" class="form-control" type="text" placeholder="Department code">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Department.Status" class="col-sm-12 col-md-2 col-form-label">Status</label>
                            <div class="col-sm-12 col-md-10">
                                <select asp-for="Department.Status" class="custom-select col-12">
                                    <option selected="">Choose...</option>
                                    <option value="true">Hoạt động</option>
                                    <option value="false">Không hoạt động</option>
                                </select>
                            </div>
                        </div>
                        <div class="btn-list">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-page="Department" type="submit" class="btn btn-danger">Cancel</a>
                        </div>
                    </form>
                </div>
            }
            else
            {
                <div class="pd-20 card-box mb-30">
                    <form method="post">
                        <div class="form-group row">
                            <label asp-for="Department.Id" class="col-sm-12 col-md-2 col-form-label">Department Name</label>
                            <div class="col-sm-12 col-md-10">
                                <input asp-for="Department.Id" class="form-control" type="hidden">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Department.DepartmentName" class="col-sm-12 col-md-2 col-form-label">Department Name</label>
                            <div class="col-sm-12 col-md-10">
                                <input asp-for="Department.DepartmentName" class="form-control" type="text" placeholder="Department name" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Department.DepartmentCode" class="col-sm-12 col-md-2 col-form-label">Department Code</label>
                            <div class="col-sm-12 col-md-10">
                                <input asp-for="Department.DepartmentCode" class="form-control" type="text" placeholder="Department code" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Department.Status" class="col-sm-12 col-md-2 col-form-label">Status</label>
                            <div class="col-sm-12 col-md-10">
                                <select asp-for="Department.Status" class="custom-select col-12" disabled="disabled">
                                    <option selected="">Choose...</option>
                                    <option value="true">Hoạt động</option>
                                    <option value="false">Không hoạt động</option>
                                </select>
                            </div>
                        </div>
                        <div class="btn-list">
                            <a asp-page="Department" type="submit" class="btn btn-primary">Back</a>
                        </div>
                    </form>
                </div>
            }

            <!-- Default Basic Forms End -->

        </div>
    </div>
</div>