@page
@using BusinessObject.Utility;
@model StudentManagingSystem_Client.Pages.DepartmentPage.UpdateDepartmentModel
@{
}
<div class="mobile-menu-overlay"></div>

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="Department">Quản lý khoa</a></li>
                                @if (User.IsInRole(RoleConstant.ADMIN))
                                {
                                    <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
                                }
                                else
                                {
                                    <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
                                }
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- Default Basic Forms Start -->
            @if (User.IsInRole(RoleConstant.ADMIN))
            {
                <div class="pd-20 card-box mb-30">
                    <form method="post">
                        <div class="row col-sm-12 col-md-12" style="width:100%; margin: 0">
                            @* <div class="form-group col-sm-4" style="display: hidden">
                                <input asp-for="Department.Id" class="form-control" type="hidden">
                            </div> *@
                            <div class="form-group col-sm-4">
                                <label asp-for="Department.DepartmentName" class="col-sm-12 col-md-12 col-form-label">Tên khoa</label>
                                <div class="col-sm-12 col-md-12">
                                    <input asp-for="Department.DepartmentName" class="form-control" type="text" placeholder="Tên khoa">
                                </div>
                            </div>
                            <div class="form-group col-sm-4">
                                <label asp-for="Department.DepartmentCode" class="col-sm-12 col-md-12 col-form-label">Mã khoa</label>
                                <div class="col-sm-12 col-md-12">
                                    <input asp-for="Department.DepartmentCode" class="form-control" type="text" placeholder="Mã khoa">
                                </div>
                            </div>
                            <div class="form-group col-sm-4">
                                <label asp-for="Department.Status" class="col-sm-12 col-md-12 col-form-label">Trạng thái</label>
                                <div class="col-sm-12 col-md-12">
                                    <select asp-for="Department.Status" class="custom-select col-12">
                                        <option selected="">Chọn...</option>
                                        <option value="true">Hoạt động</option>
                                        <option value="false">Không hoạt động</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group col-sm-12">
                                <label asp-for="Department.Status" class="col-sm-12 col-md-12 col-form-label">Mô tả</label>
                                <div class=" col-sm-12 col-md-12">
                                    <textarea class="swal2-textarea" rows="4" cols="50" style="margin: 0;width:100%"></textarea>
                                </div>
                            </div>
                            <div style="display:flex; justify-content: flex-end"
                                 class="btn-list col-sm-12 col-md-12">
                                <a asp-page="Department" type="submit" class="btn" style="min-width:150px;background: #CAC4D0; color: white">Hủy</a>

                                <button type="submit" class="btn btn-primary" style="min-width:150px;">Lưu</button>
                            </div>
                        </div>
                    </form>
                </div>
            }
            else
            {
                <div class="pd-20 card-box mb-30">
                    <form method="post">
                        <div class="form-group row">
                            <label asp-for="Department.Id" class="col-sm-12 col-md-2 col-form-label">Tên khoa</label>
                            <div class="col-sm-12 col-md-12">
                                <input asp-for="Department.Id" class="form-control" type="hidden">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Department.DepartmentName" class="col-sm-12 col-md-2 col-form-label">Tên khoa</label>
                            <div class="col-sm-12 col-md-12">
                                <input asp-for="Department.DepartmentName" class="form-control" type="text" placeholder="Tên khoa" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Department.DepartmentCode" class="col-sm-12 col-md-2 col-form-label">Mã khoa</label>
                            <div class="col-sm-12 col-md-12">
                                <input asp-for="Department.DepartmentCode" class="form-control" type="text" placeholder="Mã khoa" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Department.Status" class="col-sm-12 col-md-2 col-form-label">Trạng thái</label>
                            <div class="col-sm-12 col-md-12">
                                <select asp-for="Department.Status" class="custom-select col-12" disabled="disabled">
                                    <option selected="">Chọn...</option>
                                    <option value="true">Hoạt động</option>
                                    <option value="false">Không hoạt động</option>
                                </select>
                            </div>
                        </div>
                        <div class="btn-list">
                            <a asp-page="Department" type="submit" class="btn btn-primary">Quay lại</a>
                        </div>
                    </form>
                </div>
            }
            @* <div class="table-responsive" style="white-space:nowrap">
                <table class="table table-striped table-bordered ">
                    <thead style="background-color: lightgray">
                        <tr>
                            <th>#</th>
                            <th>Tên Lớp</th>
                            <th>Mã lớp</th>
                            <th>Giảng viên</th>
                            <th>Trạng thái</th>
                            <th>Ngày tạo</th>
                            <th>Ngày cập nhật</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ListClassRoom.Data)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" name="selectedItems" value="@item.Id">
                                </td>
                                <td class="table-plus">@item.ClassName</td>
                                <td>@item.ClassCode</td>
                                <td>@item.TeacherName</td>
                                <td>@(item.Status == true ? "Hoạt động" : "Không hoạt động")</td>
                                <td>@(item.CreatedDate != null ? item.CreatedDate.Value.ToShortDateString() : "")</td>
                                <td>@(item.LastModifiedDate != null ? item.LastModifiedDate.Value.ToShortDateString() : "")</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div> *@
            <!-- Default Basic Forms End -->

        </div>
    </div>
</div>