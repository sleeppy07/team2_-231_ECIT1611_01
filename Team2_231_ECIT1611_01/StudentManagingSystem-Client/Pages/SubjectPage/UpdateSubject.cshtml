@page
@using BusinessObject.Utility;
@model StudentManagingSystem_Client.Pages.SubjectPage.UpdateSubjectModel
@{
}
<div class="mobile-menu-overlay"></div>

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        @*<div class="title">
                        <h4>Form</h4>
                        </div>*@
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-page="Subject">Quản lý môn học</a></li>
                                @if (User.IsInRole(RoleConstant.ADMIN))
                                {
                                    <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
                                }
                                else
                                {
                                    <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
                                }
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- Default Basic Forms Start -->
            @if (User.IsInRole(RoleConstant.ADMIN))
            {
                <div class="pd-20 card-box mb-30">
                    <form method="post">
                        <div class="form-group row">
                            <div class="col-sm-12 col-md-10">
                                <input asp-for="Subject.Id" class="form-control" type="hidden" placeholder="Tên môn học">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Subject.SubjectName" class="col-sm-12 col-md-2 col-form-label">Tên môn học</label>
                            <div class="col-sm-12 col-md-10">
                                <input asp-for="Subject.SubjectName" class="form-control" type="text" placeholder="Tên môn học">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Subject.SubjectCode" class="col-sm-12 col-md-2 col-form-label">Mã môn học</label>
                            <div class="col-sm-12 col-md-10">
                                <input asp-for="Subject.SubjectCode" class="form-control" type="text" placeholder="Mã môn học">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Subject.Description" class="col-sm-12 col-md-2 col-form-label">Mô tả</label>
                            <div class="col-sm-12 col-md-10">
                                <input asp-for="Subject.Description" class="form-control" type="text" placeholder="Mô tả">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Subject.Semester" class="col-sm-12 col-md-2 col-form-label">Học kỳ</label>
                            <div class="col-sm-12 col-md-10">
                                <input asp-for="Subject.Semester" class="form-control" type="number" placeholder="Học kỳ">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Subject.Status" class="col-sm-12 col-md-2 col-form-label">Trạng thái</label>
                            <div class="col-sm-12 col-md-10">
                                <select asp-for="Subject.Status" class="custom-select col-12">
                                    <option selected="">Chọn...</option>
                                    <option value="true">Hoạt động</option>
                                    <option value="false">Không hoạt động</option>
                                </select>
                            </div>
                        </div>
                        <div class="btn-list">
                            <button type="submit" class="btn btn-primary">Lưu</button>
                            <a asp-page="Subject" type="submit" class="btn btn-danger">Thoát</a>
                        </div>
                    </form>
                </div>

            }
            else
            {
                <div class="pd-20 card-box mb-30">
                    <form method="post">
                        <div class="form-group row">
                            <div class="col-sm-12 col-md-10">
                                <input asp-for="Subject.Id" class="form-control" type="hidden" placeholder="Tên môn học">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Subject.SubjectName" class="col-sm-12 col-md-2 col-form-label">Tên môn học</label>
                            <div class="col-sm-12 col-md-10">
                                <input asp-for="Subject.SubjectName" class="form-control" type="text" placeholder="Tên môn học" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Subject.SubjectCode" class="col-sm-12 col-md-2 col-form-label">Mã môn học</label>
                            <div class="col-sm-12 col-md-10">
                                <input asp-for="Subject.SubjectCode" class="form-control" type="text" placeholder="Mã môn học" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Subject.Description" class="col-sm-12 col-md-2 col-form-label">Mô tả</label>
                            <div class="col-sm-12 col-md-10">
                                <input asp-for="Subject.Description" class="form-control" type="text" placeholder="Mô tả" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Subject.Semester" class="col-sm-12 col-md-2 col-form-label">Học kỳ</label>
                            <div class="col-sm-12 col-md-10">
                                <input asp-for="Subject.Semester" class="form-control" type="number" placeholder="Học kỳ" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Subject.Status" class="col-sm-12 col-md-2 col-form-label">Trạng thái</label>
                            <div class="col-sm-12 col-md-10">
                                <select asp-for="Subject.Status" class="custom-select col-12" disabled="disabled">
                                    <option selected="">Chọn...</option>
                                    <option value="true">Hoạt động</option>
                                    <option value="false">Không hoạt động</option>
                                </select>
                            </div>
                        </div>
                        <div class="btn-list">
                            <button type="submit" class="btn btn-primary">Lưu</button>
                            <a asp-page="Subject" type="submit" class="btn btn-primary">Quay lại</a>
                        </div>
                    </form>
                </div>
            }
            <!-- Default Basic Forms End -->

        </div>
    </div>
</div>