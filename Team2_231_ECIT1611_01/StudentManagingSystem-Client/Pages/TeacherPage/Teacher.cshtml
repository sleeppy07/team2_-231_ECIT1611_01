@page
@using BusinessObject.Utility;
@model StudentManagingSystem_Client.Pages.TeacherPage.TeacherModel
@{
}
@{
    var t = HttpContext.Request.Cookies["AccessToken"];
}
<input type="hidden" id="token" value="@t" />
<div class="mobile-menu-overlay"></div>

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Teacher List</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-page="Index">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Teacher</li>
                            </ol>
                        </nav>
                    </div>
                    @if (User.IsInRole(RoleConstant.ADMIN))
                    {
                        <div class="col-md-6 col-sm-12 d-flex flex-row">
                            <div class="col-md-4 col-sm-12 text-right">
                                <div class="dropdown">
                                    <a class="btn btn-primary" asp-page="AddTeacher">
                                        Add Teacher
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-12 text-right">
                                <div class="dropdown">
                                    <a id="deleteButton" class="btn btn-danger disabled">
                                        Disable
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-12 text-left">
                                <div class="dropdown">
                                    <a class="btn btn-outline-danger" asp-page="ExportTeacher">
                                        Export
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-12 text-left">
                                <div class="dropdown">
                                    <a class="btn btn-outline-success" onclick="chooseFile()">
                                        Import
                                    </a>
                                    <form id="uploadForm" method="post" enctype="multipart/form-data" asp-page="ImportTeacher" style="display: none;">
                                        <input id="fileInput" type="file" name="file" accept=".xlsx, .xls" />
                                        <button id="submitBtn" type="submit">Submit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <form method="get">
                <div class="row mb-15">
                    <div class="col-md-4">
                        <div class="header-search">
                            <form method="get">
                                <div class="form-group mb-0" style="display:flex">
                                    <i style="justify-content: flex-start;"
                                       class="dw dw-search2 search-icon mr-10 mt-15"></i>
                                    <input asp-for="Keyword" style="justify-content: flex-end;" type="text"
                                           class="form-control search-input" placeholder="Search Here">
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div style="display: flex;">
                            <p style="justify-content: flex-start; margin-top:9px" class="mr-10">Status</p>
                            <div style="justify-content: flex-end; width: 200px;">
                                <select asp-for="Status" class="custom-select">
                                    <option selected="" value="null">All</option>
                                    <option value="True">Hoạt động</option>
                                    <option value="False">Không hoạt động</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <button type="submit" style="height: 44px;margin-left: 20px;width: 114px;" class="btn btn-success">Filter</button>
                    @*<div class="col-md-3">
                    <div style="display: flex;">
                    <p style="justify-content: flex-start;margin-top:9px" class="mr-10">Status</p>
                    <div style="justify-content: flex-end; width: 200px;">
                    <select class="custom-select">
                    <option selected="">All</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                    </select>
                    </div>
                    </div>

                    </div>*@
                </div>
            </form>
            <div class="table-responsive">
                <table class="table table-striped table-bordered ">
                    <thead style="background-color: lightgray">
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Phone</th>
                            <th>Status</th>
                            <th>Created Date</th>
                            <th>Last Modified Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ListTeacher.Data)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" name="selectedItems" value="@item.Id">
                                </td>
                                <td class="table-plus">@item.FullName</td>
                                <td>@item.Email</td>
                                <td>@item.Adress</td>
                                <td>@item.Phone</td>
                                <td>@(item.Status == true ? "Hoạt động" : "Không hoạt động")</td>
                                <td>@(item.CreatedDate != null ? item.CreatedDate.Value.ToShortDateString() : "")</td>
                                <td>@(item.LastModifiedDate != null ? item.LastModifiedDate.Value.ToShortDateString() : "")</td>
                                <td>
                                    <div class="dropdown">
                                        <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                            <i class="dw dw-more"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                            <a class="dropdown-item" asp-page="UpdateTeacher" asp-route-id="@item.Id" asp-route-pageIndex="@Model.PageIndex"><i class="dw dw-edit2"></i> Edit</a>
                                            <a class="dropdown-item" asp-page="DeleteTeacher" asp-route-id="@item.Id" onclick="return confirmDelete(event)"><i class="dw dw-delete-3"></i> Disable</a>
                                        </div>

                                    </div>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            @{
                var prev = Model.PageIndex > 1 ? "" : "disabled";
                var next = Model.PageIndex < Model.TotalPage ? "" : "disabled";
            }
            <div class="row">
                <div class="btn-group mb-15" style="margin-left:15px;">
                    <a class="btn btn-light @prev" asp-page="./Teacher" asp-route-pageIndex="@(Model.PageIndex-1)">Previous</a>
                    @for (int i = 1; i <= Model.TotalPage; i++)
                    {
                        <a class="btn @(i == Model.PageIndex ? "btn-success" : "btn-light")" asp-page="./Teacher" asp-route-pageIndex="@i">@i</a>
                    }
                    <a class="btn btn-light @next" asp-page="./Teacher" asp-route-pageIndex="@(Model.PageIndex+1)">Next</a>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function confirmDelete(event) {
        event.preventDefault(); // prevent the default action of the button click
        Swal.fire({
            title: 'Are you sure?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, disable !'
        }).then((result) => {
            if (result.isConfirmed) {
                // if the user clicks the confirm button, continue with the delete action
                window.location.href = event.target.href;
            }
        });
        return false;
    }
</script>
<script>
    function chooseFile() {
        var fileInput = document.getElementById('fileInput');
        fileInput.click();
    }

    document.getElementById('fileInput').addEventListener('change', function () {
        var submitBtn = document.getElementById('submitBtn');
        submitBtn.click();
    });
</script>
<script>
    var checkboxes = document.querySelectorAll('input[name="selectedItems"]');
    var deleteButton = document.getElementById('deleteButton');

    function handleCheckboxChange() {
        var checkedCount = 0;
        checkboxes.forEach(function (checkbox) {
            if (checkbox.checked) {
                checkedCount++;
            }
        });

        if (checkedCount >= 2) {
            deleteButton.classList.remove('disabled');
        } else {
            deleteButton.classList.add('disabled');
        }
    }

    checkboxes.forEach(function (checkbox) {
        checkbox.addEventListener('change', handleCheckboxChange);
    });
</script>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#deleteButton').click(function () {
                // Get the selected checkbox values
                var selectedIds = [];
                $("input:checkbox:checked").map(function () {
                    selectedIds.push($(this).val());
                });

                // Make the AJAX request

                if (selectedIds.length > 0) {
                    var url = "https://localhost:7016/api/Teacher/deleteList";
                    var token = document.getElementById("token").value;
                    $.ajax({
                        url: url,
                        type: "POST",
                        data: JSON.stringify(selectedIds),
                        contentType: "application/json",
                        headers: {
                            "Authorization": "Bearer" + " " + token
                        },
                        success: function (response) {
                            // Handle success response
                            location.reload(true);
                            console.log(response);
                        },
                        error: function (xhr, status, error) {
                            // Handle error
                            console.error(error);
                        }
                    });
                }

            });
        });
    </script>
}